<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_coose">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#66069fd1"
        android:gravity="center_horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Счет:"
            android:textColor="#149500"
            android:id="@+id/tw_score"
            android:textSize="24sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#66069fd1"

        android:orientation="horizontal">



        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginLeft="25dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="26sp"
                android:textColor="#149500"
                android:id="@+id/tw1"
                android:text="1"/>
            <ImageView
                android:layout_width="45dp"
                android:layout_height="35dp"
                android:id="@+id/iw_1"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="26sp"
                android:id="@+id/tw2"
                android:textColor="#149500"


                android:text="2"/>
            <ImageView
                android:layout_width="45dp"
                android:layout_height="35dp"
                android:id="@+id/iw_2"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="26sp"
                android:id="@+id/tw3"
                android:textColor="#149500"

                android:text="3"/>
            <ImageView
                android:layout_width="45dp"
                android:layout_height="35dp"
                android:id="@+id/iw_3"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="26sp"
                android:id="@+id/tw4"
                android:textColor="#149500"

                android:text="4"/>
            <ImageView
                android:layout_width="45dp"
                android:layout_height="35dp"
                android:id="@+id/iw_4"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"

            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="26sp"
                android:id="@+id/tw5"
                android:textColor="#149500"

                android:text="5"/>
            <ImageView
                android:layout_width="45dp"
                android:layout_height="35dp"
                android:id="@+id/iw_5"
                />
        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="70dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:textColor="#149500"
                android:text="question"
                android:textSize="30sp"
                android:id="@+id/textView"
                android:shadowDx="1"
                android:shadowDy="2"
                android:shadowRadius="0.6"
                android:textStyle="bold"/>
        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:layout_marginBottom="10dp"
        android:gravity="bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <Button
                android:text="ans1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ans_btn1"
                android:textColor="#149500"
                android:textStyle="bold"
                android:layout_weight="1"
                android:background="@drawable/rouned_color_btn"
                android:elevation="12dp"
                android:layout_margin="4dp" />

            <Button
                android:textColor="#149500"
                android:textStyle="bold"
                android:text="ans2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ans_btn2"
                android:layout_weight="1"
                android:background="@drawable/rouned_color_btn"


                android:layout_margin="4dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <Button
                android:textColor="#149500"
                android:textStyle="bold"
                android:text="ans3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ans_btn3"
                android:layout_weight="1"
                android:background="@drawable/rouned_color_btn"
                android:layout_margin="4dp"

                />

            <Button
                android:textColor="#149500"
                android:textStyle="bold"
                android:text="ans4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ans_btn4"
                android:layout_weight="1"
                android:background="@drawable/rouned_color_btn"
                android:layout_margin="4dp"

                />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>